<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <TextView
            android:id="@+id/item_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="15dp"
            android:text="向晚大魔王"
            android:textColor="@color/cardBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_member_slogan"
            style="@style/members_item_style"
            android:layout_below="@id/item_member_name"
            android:layout_alignStart="@id/item_member_name"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:text="个性签名" />

        <TextView
            android:id="@+id/item_member_followed"
            style="@style/members_item_style"
            android:layout_alignBottom="@id/item_member_slogan"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="20dp"
            android:text="关注：" />

        <TextView
            android:id="@+id/item_member_dayIncrease"
            style="@style/members_item_style"
            android:layout_below="@id/item_member_followed"
            android:layout_alignStart="@id/item_member_followed"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-10dp"
            android:text="日增：" />

        <TextView
            android:id="@+id/MemberCaptainNum"
            style="@style/members_item_style"
            android:layout_below="@id/item_member_dayIncrease"
            android:layout_alignStart="@id/item_member_followed"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="舰团：" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignTop="@id/item_member_name"
            android:layout_marginStart="12dp"
            android:layout_marginTop="-15dp"
            android:src="@drawable/wandou" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="recycleview" />
</androidx.cardview.widget.CardView>