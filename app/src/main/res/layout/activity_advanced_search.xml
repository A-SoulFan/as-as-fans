<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:theme="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/edit_text"
                android:background="@drawable/edit_text_shape"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:hint="不支持手动输入哦，请选择下方选项"
                android:textSize="12dp"
                android:maxLines="1"
                android:scrollbars="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintRight_toLeftOf="@+id/image_why"
                android:layout_width="0dp"
                android:layout_height="35dp"/>
            <ImageView
                android:id="@+id/search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@+id/edit_text"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_search"
                android:background="@color/cardWhite"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
            <TextView
                android:textColor="@color/cardWhite"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/edit_text"
                android:id="@+id/image_why"
                android:layout_marginRight="8dp"
                android:text="搜索"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <org.angmarch.views.NiceSpinner
                android:id="@+id/order"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/copyright"
                app:arrowTint="@color/cardGray"
                android:textSize="12dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <org.angmarch.views.NiceSpinner
                android:id="@+id/copyright"
                app:layout_constraintLeft_toRightOf="@+id/order"
                app:layout_constraintRight_toLeftOf="@+id/tname"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_centerHorizontal="true"
                app:arrowTint="@color/cardGray"
                android:textSize="12dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <org.angmarch.views.NiceSpinner
                android:id="@+id/tname"
                app:layout_constraintLeft_toRightOf="@+id/copyright"
                app:layout_constraintRight_toLeftOf="@+id/view_num"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_centerHorizontal="true"
                app:layout_constraintHorizontal_weight="1"
                app:arrowTint="@color/cardGray"
                android:textSize="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <org.angmarch.views.NiceSpinner
                android:id="@+id/view_num"
                app:layout_constraintLeft_toRightOf="@+id/tname"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_centerHorizontal="true"
                app:layout_constraintHorizontal_weight="1"
                app:arrowTint="@color/cardGray"
                android:textSize="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:background="@color/light_gray"
        android:id="@+id/frameLayout"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="search_fragment"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>